                </div>
            </div>
        </div>
    </div>

    <!-- Restanti sezioni -->
    <div class="col-md-9">
        <!-- Inizia una riga per ogni sezione -->
        <div class="row">

            @foreach (var dish in obj.Dishes)
            {
                <div class="col-md-12 m-2 mt-2 border-2" style="border-color:black;" id="@dish.Id.ToString()">
