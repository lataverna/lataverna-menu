@using Core.LaTavernaMenu.Models;
@model List<Section>

@foreach (var obj in Model)
{
    <div class="col-md-12 m-1">
        <div class="card bg-transparent border-bottom-1" style="border-color:black">
            <div class="card-body">
                <h2 class="card-title justify-content-center">@obj.Name</h2>
                <div class="d-flex justify-content-end">
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-primary" style="border-color:black">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-pen-fill" viewBox="0 0 16 16">
                                <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001"></path>
                            </svg>
                            <span class="visually-hidden">Button</span>
                        </button>
                        <button type="button" class="btn btn-outline-primary" style="border-color:black">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-x-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                            </svg>
                            <span class="visually-hidden">Button</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Restanti sezioni -->
    <div class="col-md-9">
        <!-- Inizia una riga per ogni sezione -->
        <div class="row">

            @foreach (var dish in obj.Dishes)
            {
                <div class="col-md-12 m-2 mt-2 border-2" style="border-color:black;">
                    <div class="card mb-3 position-relative bg-transparent border-1" style="border-color:black" id="@dish.Id.ToString()">
                        <div class="card-body">
                            <h5 class="card-title">@dish.Name</h5>
                            <p class="card-text">@dish.Description</p>
                            <div class="border-0 price position-absolute bottom-0 end-0 justify-content-center align-items-center" style="width: 250px; height: 50px; border: 1px solid #ccc;">
                                <span class="align-text-center h5">@dish.Price</span>
                            </div>
                        </div>
                        <div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-primary" style="border-color:black" onclick="transformUpdate('@dish.Id.ToString()')">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-pen-fill" viewBox="0 0 16 16">
                                        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001"></path>
                                    </svg>
                                    <span class="visually-hidden">Button</span>
                                </button>
                                <button type="button" class="btn btn-outline-primary" style="border-color:black">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-x-square" viewBox="0 0 16 16">
                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                                    </svg>
                                    <span class="visually-hidden">Button</span>
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}


<script>

    function defaultCardV2(data) {

    }

    <!--COMPONENTI-->
        var closeButton = '<button type="button" class="btn btn-outline-primary" style="border-color:black">' +
        '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-x-square" viewBox="0 0 16 16">' +
        '<path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />' +
        '<path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />' +
        '</svg>' +
        '<span class="visually-hidden">Button</span>' +
        '</button>';

    <!--FUNZIONI CRUD-- >

        function transformUpdate(idValue) {
            var card = document.getElementById(idValue);
            var newCard = `<div class="card border-dark" style="background-color:#faf0b3;">
                    <div class="card-header bg-transparent border-dark">
                    <h1 class="card-title">Modulo per l'inserimento di un nuovo piatto</h1>
                    </div>
                    <div class="card-body">
                    <form id="dishCardForm">
                    <div class="mb-3 row">
                    <input id="id" name="id" type="hidden" value="${idValue}">
                    <label for="dishName" class="col-sm-3 col-form-label">Nome piatto:</label>
                    <div class="col-sm-9">
                    <input type="text" id="dishName" name="dishName" class="form-control">
                    </div>
                    </div>
                    <div class="mb-3 row">
                    <label for="description" class="col-sm-3 col-form-label">Descrizione:</label>
                    <div class="col-sm-9">
                    <input type="text" id="description" name="description" class="form-control">
                    </div>
                    </div>
                    <div class="mb-3 row">
                    <label for="price" class="col-sm-3 col-form-label">Prezzo:</label>
                    <div class="col-sm-9">
                    <input type="text" id="price" name="price" class="form-control">
                    </div>
                    </div>
                    <div class="row justify-content-end">
                    <div class="col-sm-9">
                    <button type="submit" class="btn btn-dark">Invia</button>
                    </div>
                    </div>
                    </form>
                    </div>
                    <div class="card-footer bg-transparent border-dark">
                    <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-link me-2" onclick="transformBackIntoDefault('${idValue}')">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M10.78 11.97a.75.75 0 0 0 0-1.06l-4.25-4.25a.75.75 0 1 0-1.06 1.06L8.69 11H2.75a.75.75 0 1 0 0 1.5h5.94l-3.97 3.97a.75.75 0 0 0 1.06 1.06l4.25-4.25a.75.75 0 0 0 0-1.06z" />
                    </svg>
                    ${closeButton}
                    </button>
                    </div>
                    </div>
                    </div>`;

            card.innerHTML = newCard;

            document.getElementById('dishCardForm').addEventListener('submit', function (event) {
                event.preventDefault();

                var formData = {
                    id: document.querySelector('input[name="id"]').value,
                    dishName: document.querySelector('input[name="dishName"]').value,
                    description: document.querySelector('input[name="description"]').value,
                    price: document.querySelector('input[name="price"]').value
                };

                fetch('/Update/Dish', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        window.location.href = '/Index';
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
            });
        };



    function transformBackIntoDefault(idValue) {

        fetch(`/Update/GoBack?id=${idValue}`)
            .then(response => response.json())
            .then(data => {
                var oldCard = document.getElementById(data.id);
                oldCard.innerText = defaultCardV2(data);
            })
            .catch(error => {
                console.error('Si è verificato un errore durante la richiesta:', error);
            });
    };


    function deleteDish(idValue) {

        fetch(`/Update/GoBack?id=${idValue}`)
            .then(response => response.json())
            .then(data => {
                var oldCard = document.getElementById(data.id);
                oldCard.innerText = defaultCardV2(data);
            })
            .catch(error => {
                console.error('Si è verificato un errore durante la richiesta:', error);
            });
    };
</script>
